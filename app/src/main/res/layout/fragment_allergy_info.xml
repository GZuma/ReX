<?xml version="1.0" encoding="utf-8"?>

<!--TODO programmatically generate text and remove hardcoded examples-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.cs115.rex.ProfileActivity" >

    <TextView
        android:id="@+id/AllergyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Allergies"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/allergies_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/AllergyLabel">
    </LinearLayout>

    <TextView
        android:id="@+id/add_an_allergy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/allergies_list"
        android:paddingTop="10sp"
        android:text="Choose foods to add:"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <Spinner
        android:id="@+id/all_foods_spinner"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_an_allergy"
        android:textAlignment="center"
        android:paddingLeft="50sp"
        android:layout_centerHorizontal="true"
        android:paddingBottom="30dp"
        />

</RelativeLayout>
