<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cs115.rex.DetailActivity" >

    <!--TODO set food header text and toxicity background color programmatically -->
    <!--TODO remove hardcoded text and replace with programmatic method to generate text-->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorToxic"
        android:text="Chocolate"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="40sp"
        android:textStyle="bold"
        />

    <!--TODO replace image with correct image programmatically via database-->
    <!--TODO replace contentDescription with correct description programmatically via database-->
    <ImageView
        android:id="@+id/detail_photo"
        android:layout_below="@+id/header"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/chocolate"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/main_image_desc" />

    <!--TODO pull text from database-->
    <!--TODO remove hardcoded example text once text from database is activated-->
    <TextView
        android:id="@+id/detail_text"
        android:layout_below="@id/detail_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="20dp"
        android:text="@string/symptom10"
         />

</RelativeLayout>
